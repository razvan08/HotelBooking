<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="100dp"
    android:background="@drawable/bg1_2"
    android:layout_margin="1dp"
    android:orientation="vertical"
    android:padding="3dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:hint="BOOKING"
        android:background="@color/teal_200"
        android:textSize="20dp"
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textAlignment="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="40dp"
        android:background="@color/black">

    </View>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:layout_marginTop="400dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:textSize="16dp"
            android:background="@color/cardview_light_background"
            android:textColor="@color/black"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Full Name" />

        <EditText
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:background="@color/cardview_light_background"
            android:hint="Enter your name"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/cardview_light_background"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:padding="5dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Contact No." />

        <EditText
            android:id="@+id/customer_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:textSize="16dp"
            android:padding="5dp"
            android:background="@color/cardview_light_background"
            android:textColor="@color/black"
            android:layout_row="1"
            android:layout_column="1"
            android:inputType="phone"
            android:hint="Enter your contact number"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/cardview_light_background"
            android:textSize="16dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:layout_row="2"
            android:layout_column="0"
            android:text="Email Id" />

        <EditText
            android:id="@+id/customer_email"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:textSize="16dp"
            android:padding="5dp"
            android:background="@color/cardview_light_background"
            android:textColor="@color/black"
            android:layout_row="2"
            android:layout_column="1"
            android:hint="Enter your email id"/>

        <TextView
            android:id="@+id/no_of_rooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="16dp"
            android:padding="5dp"
            android:background="@color/cardview_light_background"
            android:textColor="@color/black"
            android:layout_row="4"
            android:layout_column="0"
            android:text="Room Type" />

        <Spinner
            android:id="@+id/room_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:background="@color/cardview_light_background"
            android:padding="5dp"
            android:text="Room Type"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/stay_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:background="@color/cardview_light_background"
            android:layout_row="5"
            android:layout_column="0"
            android:text="No. of Stay days" />

        <EditText
            android:id="@+id/customer_stay_days"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:background="@color/cardview_light_background"
            android:hint="Enter stay days"
            android:inputType="number"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            tools:ignore="TouchTargetSizeCheck" />

    </GridLayout>

    <Button
        android:id="@+id/cust_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:background="@drawable/black"
        android:text="Save" />
</LinearLayout>